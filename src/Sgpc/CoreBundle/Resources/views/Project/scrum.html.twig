{%  extends 'base.html.twig' %}

{% set owner = project.getOwner %}
{% set members = project.getUsers %}
{% set sprints = project.sprints %}
{% set tasks = project.tasks %}
{% block body %}
    {{ parent() }}

    <div class="project-wrapper">
        <div class="project-main-content">
            <div class="project-canvas">
                <h2><a class="back-button" href="/"><i class="mdi mdi-arrow-left"></i></a>{{project.name}}. Trabajo pendiente</h2>
                <div class="container">

                    <h4 style="color:white;">Sprint actual</h4>

                    {% if sprints %}
                        {% for sprint in sprints if sprint.isActive %}
                            <a href="{{ path('sgpc_sprint_view', {'id':sprint.id})}}">{{sprint.name}} <br>Del {{sprint.start|date("d/m/Y")}} al {{sprint.end|date("d/m/Y")}} </a> <br> 
                            {% else %}
                            <a class="js-toggle-sprint-form" href="javascript:void(0);">
                                <i class="mdi mdi-plus"></i>
                            </a>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="container">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#undone-tasks" aria-controls="undone-tasks" role="tab" data-toggle="tab">Tareas pendientes</a></li>
                        <li role="presentation"><a href="#done-tasks" aria-controls="done-tasks" role="tab" data-toggle="tab">Tareas finalizadas</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="undone-tasks">
                            <table class="table" style="color:white;">
                                <thead>
                                    <tr>
                                        <th>Tarea</th>
                                        <th>Estado</th>
                                        <th>Prioridad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for task in tasks %}
                                        {% if not task.isActive and task.lastListing != 'Done' %}
                                            <tr>
                                                <td>{{task.name}}</td>
                                                {% if task.lastListing %}
                                                    <td>{{task.lastListing}}</td>
                                                {% else %}
                                                    <td>To Do</td>
                                                {% endif %}
                                                <td>{{task.priority}}</td>
                                            </tr>  

                                        {% endif %}
                                    {% endfor %}

                                </tbody>
                            </table>
                            <a class="js-toggle-task-form" href="javascript:void(0);"><i class="mdi mdi-plus"></i></a>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="done-tasks">
                            <table class="table" style="color:white;">
                                <thead>
                                    <tr>
                                        <th>Tarea</th>
                                        <th>Estado</th>
                                        <th>Prioridad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for task in tasks %}
                                        {% if not task.isActive and task.lastListing == 'Done' %}
                                            <tr>
                                                <td>{{task.name}}</td>
                                                <td>{{task.lastListing}}</td>                                     
                                                <td>{{task.priority}}</td>
                                            </tr>  

                                        {% endif %}
                                    {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="sidebar-toggle">
        <i class="mdi mdi-menu"></i>
        <i class="mdi mdi-chevron-right"></i>
    </div>


    <!--SIDEBAR-->
    {{ include('SgpcCoreBundle:Project:partials/scrumSidebar.html.twig') }}


    <!--MODALS-->
    {{ include('SgpcCoreBundle:Task:modals/taskModal.html.twig') }}
    {{ include('SgpcCoreBundle:Sprint:modals/sprintModal.html.twig') }}


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('document').ready(function () {
            $('.js-toggle-task-form').click(function () {
                $('.task-form').show();
                $('#taskModal').modal('show');
            });

            $('.js-toggle-sprint-form').click(function () {
                $('#sprintModal').modal('show');
            });

            $('.js-toggle-addmember-form').click(function () {
                $(this).parent().find('.project-members-form').toggle();
            });

            $('.sidebar-toggle').click(function () {
                $(this).toggleClass('in');
                $('.project-sidebar').toggleClass('in');
            });



            $('.datepicker').datepicker();
        });
    </script>

{% endblock %}
